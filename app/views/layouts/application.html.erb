<!DOCTYPE html>
<html>
  <head>
    <title>Retro Joy</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% flash.each do |message_type, message| %>
        <div id="marg-zero" class="alert alert-<%= message_type %>"><%= message %></div>
    <% end %>

    <% if logged_in? %>
      <header class="navbar navbar-fixed-top navbar-inverse bg-light">
        <div class="container">
          <%= image_tag "logo-trans.png", class: 'mb4 logo nav-logo' %>
          <nav>
            <ul class="nav navbar-nav navbar-right flex-row">
              <li><%= link_to "HOME",   '#', class: 'p-3' %></li>
              <li><%= link_to "CAT1",   '#', class: 'p-3' %></li>
              <li><%= link_to "CAT2", '#', class: 'p-3' %></li>
              <li><%= link_to "CAT3",   '#', class: 'p-3' %></li>
              <li><%= link_to "Wrtie an Article",   '#', class: 'p-3' %></li>
            </ul>
            </nav>
        </div>
      </header>
    <% end %>

    <%= yield %>

    <% if logged_in? %>
      <footer class="navbar navbar-fixed-top navbar-inverse bg-light">
      <div class="container">
        <%= image_tag "logo-trans.png", class: 'mb4 logo nav-logo' %>
        <nav>
          <ul class="nav navbar-nav navbar-right flex-row">
            <li><%= link_to "HOME",   '#', class: 'p-3' %></li>
          </ul>
        </nav>
        footer
        </div>
      </footer>
    <% end %>
    <%= debug(params) if Rails.env.development? %>
  </body>
</html>
